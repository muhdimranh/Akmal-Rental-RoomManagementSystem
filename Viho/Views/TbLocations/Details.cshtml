@{
    var userRoleIdClaim = User.Claims.FirstOrDefault(c => c.Type == "URoleid");
    var userRoleId = userRoleIdClaim != null ? int.Parse(userRoleIdClaim.Value) : 0;
}

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">

                <div class="card-body">
                    <div class="row">
                        <hr />
                        <p>
                            <b>Floor Layout:</b>
                            @if (!string.IsNullOrEmpty(Model.LImglayout1))
                            {
                                <img src="@Url.Content("~/Picture/Layouts/" + Model.LImglayout1)" alt="Floor Layout" class="img-fluid" style="max-width: 400px; max-height: 400px;" />
                            }
                            else
                            {
                                <span>No image available</span>
                            }
                        </p>
                        <p><b>Code: </b> @Model.LCode</p>
                        <p><b>Address: </b> @Model.LAddress</p>
                        <p><b>Wifi Information: </b> @Model.LWifi</p>
                        <p><b>Modem IP: </b> @Model.LModemIp</p>
                        <p><b>Account Number:</b> @Model.LCctv</p>
                        @if (userRoleId == 3)
                        {
                            <hr />
                            <p><a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.LId">Edit</a></p>
                        }
                        else
                        {
                            
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
