@model Viho.web.DataDB.TbPayment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Delete Page</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Tb1Sales" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item">Records</li>
                        <li class="breadcrumb-item active">Payment Tenant</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>Records</h5>
                        <span><a asp-action="Index">Back to List</a></span>
                    </div>
                    <div class="card-body">
                        <h4>Are you sure you want to delete this?</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayName("Date")
                            </dt>
                            <dd class="col-sm-10">
                                : @Html.DisplayFor(model => model.PDate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Room No")
                            </dt>
                            <dd class="col-sm-10">
                                : @Html.DisplayFor(model => model.PRoomNo)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Tenant Name")
                            </dt>
                            <dd class="col-sm-10">
                                : @Html.DisplayFor(model => model.PTenant.TName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Transaction Type")
                            </dt>
                            <dd class="col-sm-10">
                                : @Html.DisplayFor(model => model.PType)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Amount")
                            </dt>
                            <dd class="col-sm-10">
                                : @Html.DisplayFor(model => model.PAmount)
                            </dd>
                        </dl>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="PId" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

