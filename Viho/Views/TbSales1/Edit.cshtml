@model Viho.web.DataDB.TbSale

@{
    ViewData["Title"] = "Expenses Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Expense Records</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item">Expenses</li>
                        <li class="breadcrumb-item active">Edit Expenses</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>Edit Record</h5>
                        <span>Fill in the column that needed change.</span>
                    </div>
                    <div class="card-body">
                         <form asp-action="Edit" asp-route-id="@Model.SId" method="post" enctype="multipart/form-data">
                              <div class="row">
                                   <div class="col">
                                       <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                       <input type="hidden" asp-for="SId" />
                                        <div class="mb-3">
                                            <label asp-for="SDate" class="control-label">Date</label>
                                            <input asp-for="SDate" class="form-control" type="date" style="width: 200px;" />
                                            <span asp-validation-for="SDate" class="text-danger"></span>
                                        </div>
                                   </div>
                              </div>
                              <div class="row">
                                   <div class="col">
                                       <div class="mb-3">
                                           <label asp-for="SCategory" class="control-label">Category</label>
                                           <select asp-for="SCategory" asp-items="ViewBag.CategoryList" class="form-control" style="width: 200px;">
                                               <option value="">-- Select Category --</option>
                                           </select>
                                           <span asp-validation-for="SCategory" class="text-danger"></span>
                                        </div>
                                    </div>
                              </div>
                              <div class="row">
                                    <div class="col">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <label asp-for="STransactionType" class="control-label">Transaction Type</label>
                                                <select asp-for="STransactionType" asp-items="ViewBag.TransactionTypeList" class="form-control" style="width: 200px;">
                                                    <option value="">-- Select Type --</option>
                                                </select>
                                                <span asp-validation-for="STransactionType" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                              </div>
                              <div class="row">
                                   <div class="col">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <label asp-for="SDetail" class="control-label">Detail</label>
                                                <input asp-for="SDetail" class="form-control" />
                                                <span asp-validation-for="SDetail" class="text-danger"></span>
                                            </div>
                                        </div>
                                   </div>
                              </div>
                              <div class="row">
                                   <div class="col">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <label asp-for="SAmountIn" class="control-label">AmountIn</label>
                                                <input asp-for="SAmountIn" class="form-control" width="200 px" placeholder="0.00" />
                                                <span asp-validation-for="SAmountIn" class="text-danger"></span>
                                            </div>
                                        </div>
                                   </div>
                              </div>
                              <div class="row">
                                   <div class="col">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <label asp-for="SAmountOut" class="control-label">AmountOut</label>
                                                <input asp-for="SAmountOut" class="form-control" width="200 px" placeholder="0.00" />
                                                <span asp-validation-for="SAmountOut" class="text-danger"></span>
                                            </div>
                                        </div>
                                   </div>
                              </div>
                              <div class="row">
                                   <div class="col">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <label asp-for="SReceipt" class="control-label">Receipt</label>
                                                <input asp-for="SReceipt" class="form-control" type="file" />
                                                @if (!string.IsNullOrEmpty(ViewBag.ExistingReceiptFileName))
                                                {
                                                    <img src="@Url.Content("~/Picture/Receipt/" + Model.SReceipt)" alt="Current file" style="max-width: 200px; max-height: 200px;" />
                                                    <br />
                                                    <span>Existing file: @ViewBag.ExistingReceiptFileName</span>
                                                }
                                                else
                                                {
                                                    <span>No Receipt</span>
                                                }
                                                <span asp-validation-for="SReceipt" class="text-danger"></span>
                                            </div>

                                        </div>
                                   </div>
                              </div>
                              <div class="row">
                                   <div class="col">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <input type="submit" value="Save" class="btn btn-primary col-sm-12" />
                                            </div>
                                        </div>
                                   </div>
                              </div>
                         </form>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

