@model Viho.web.DataDB.TbSale

@{
    ViewData["Title"] = "Expenses Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Expenses Records</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item">Expenses</li>
                        <li class="breadcrumb-item active">Delete Expenses</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>Delete Confirmation</h5>
                        <span><a asp-action="Index">Back to List</a></span>
                    </div>
                    <div class="card-body">
                        <div>
                            <h5 style="color: red;">Are you sure you want to delete this?</h5>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayName("Date")
                                </dt>
                                <dd class="col-sm-10">
                                    : @Html.DisplayFor(model => model.SDate)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayName("Category")
                                </dt>
                                <dd class="col-sm-10">
                                    : @Html.DisplayFor(model => model.SCategory)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayName("Transaction Type")
                                </dt>
                                <dd class="col-sm-10">
                                    : @Html.DisplayFor(model => model.STransactionType)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayName("Detail")
                                </dt>
                                <dd class="col-sm-10">
                                    : @Html.DisplayFor(model => model.SDetail)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayName("Amount In")
                                </dt>
                                <dd class="col-sm-10">
                                    : @Html.DisplayFor(model => model.SAmountIn)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayName("Amount Out")
                                </dt>
                                <dd class="col-sm-10">
                                    : @Html.DisplayFor(model => model.SAmountOut)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayName("Receipt")
                                </dt>
                                <dd class="col-sm-10">
                                    @if (!string.IsNullOrEmpty(Model.SReceipt))
                                    {
                                        <img src="@Url.Content("~/Picture/Receipt/" + Model.SReceipt)" alt="Receipt" style="max-width: 300px; max-height: 300px;" />
                                        <hr />
                                        <a href="@Url.Action("DownloadReceipt", "TbSales1", new { id=Model.SId })">Download</a>
                                    }
                                    else
                                    {
                                        <span>No Receipt</span>
                                    }
                                </dd>
                            </dl>
                            <form asp-action="Delete" onsubmit="return confirmDelete();">
                                <input type="hidden" asp-for="SId" />
                                <input type="submit" value="Delete" class="btn btn-danger col-sm-12" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
@section Script{
    <script>
        function confirmDelete() {
            if (confirm("Deleting this can't be undone, are you sure?")) {
                return true;
            } else {
                return false;
            }
        }
    </script>
}