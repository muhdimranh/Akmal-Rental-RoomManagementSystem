@model Viho.web.DataDB.TbInventory

@{
    ViewData["Title"] = "Inventory Delete";
    Layout = "_Layout";
}
<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Inventory</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item">Inventory</li>
                        <li class="breadcrumb-item active">Delete Inventory</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Inventory Detail</h5>
                        <span><a asp-action="Index">Back to List</a></span>
                    </div>
                    <div class="card-body">
                            <h5 style="color: red">Are you sure you want to delete this?</h5>
                            <hr />
                        <div>
                             <dl class="row">
                                <dt class="col-sm-2">
                                    Location
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ILocation.LCode)
                                </dd>
                                <dt class="col-sm-2">
                                    Item
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IItem)
                                </dd>
                                <dt class="col-sm-2">
                                    Quantity
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IQuantity)
                                </dd>
                             </dl>
                            <form asp-action="Delete" onsubmit="return confirmDelete();">
                                 <input type="hidden" asp-for="IId" />
                                 <input type="submit" value="Delete" class="btn btn-danger" />
                             </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@section Script{
    <script>
        function confirmDelete() {
            if (confirm("Deleting this can't be undone, are you sure?")) {
                return true;
            } else {
                return false;
            }
        }
    </script>
}
