@model Viho.web.DataDB.TbLot

@{
    ViewData["Title"] = "Investor Lot Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Investor Lot</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item">Investor Lot</li>
                        <li class="breadcrumb-item active">Edit Investor Lot</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>Edit Lot Detail:</h5><span>Fill In The New Information to Edit</span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="Edit" asp-route-id="@Model.LotId" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="LotId" />
                                    <div class="form-group">
                                        <h6>Lot Name</h6>
                                        <input asp-for="LotName" class="form-control" readonly/>
                                        <span asp-validation-for="LotName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <h6>Status</h6>
                                        <input asp-for="LotStatus" class="form-control" />
                                        <span asp-validation-for="LotStatus" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary col-sm-12" />
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

