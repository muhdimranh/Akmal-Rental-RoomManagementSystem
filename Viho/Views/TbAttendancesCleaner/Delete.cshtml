@model Viho.web.DataDB.TbAttendanceCleaner

@{
    ViewData["Title"] = "Attendance Record Delete";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}
<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Investor Lot</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item">Attendance</li>
                        <li class="breadcrumb-item active">Attendance Record Delete</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>Delete Confirmation</h5>
                        <span><a asp-action="Index">Back to List</a></span>
                    </div>
                    <div class="card-body">
                        <div>
                            <h5 style="color: red;">Are you sure you want to delete this?</h5>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">Attendance Id</dt>
                                <dd class="col-sm-10">@Html.DisplayFor(model => model.AttId)</dd>

                                <dt class="col-sm-2">Location Code</dt>
                                <dd class="col-sm-10">@Html.DisplayFor(model => model.AttL.LCode)</dd>

                                <dt class="col-sm-2">Attendance Count</dt>
                                <dd class="col-sm-10">@Html.DisplayFor(model => model.AttCount)</dd>


                                <dt class="col-sm-2">Attendance Dates</dt>
                                <dd class="col-sm-10">
                                    @foreach (var date in Model.TbAttendancedates)
                                    {
                                        <p>@date.Attdate?.ToShortDateString()</p>
                                    }
                                </dd>
                            </dl>
                            <form asp-action="Delete" onsubmit="return confirmDelete();">
                                <input type="hidden" asp-for="AttId" />
                                <input type="submit" value="Delete" class="btn btn-danger col-sm-12" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
@section Script{
    <script>
        function confirmDelete() {
            if (confirm("Deleting this can't be undone, are you sure?")) {
                return true;
            } else {
                return false;
            }
        }
    </script>
}