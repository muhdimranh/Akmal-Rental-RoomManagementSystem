@model Viho.web.DataDB.TbRoom
@{
    ViewData["Title"] = "Delete Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Room</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item">Room</li>
                        <li class="breadcrumb-item active">Delete Room</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>Delete Confirmation</h5>
                        <span><a asp-action="Index">Back to List</a></span>
                    </div>
                    <div class="card-body">
                        <div>
                            <h5 style="color: red;">Are you sure you want to delete this?</h5>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Room Picture:
                                </dt>
                                <dd class="col-sm-10">
                                    @if (!string.IsNullOrEmpty(Model.RImg1))
                                    {
                                        <img src="@Url.Content("~/Picture/Rooms/" + Model.RImg1)" alt="Room Image" style="max-width: 500px; max-height: 500px;" />
                                    }
                                    else
                                    {
                                        <span>No image available</span>
                                    }
                                </dd>
                                <dt class="col-sm-2">
                                    Room No.
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.RNo)
                                </dd>
                                <dt class="col-sm-2">
                                    Type
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.RType)
                                </dd>
                                <dt class="col-sm-2">
                                    Rent Per Month
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.RPrice)
                                </dd>
                                <dt class="col-sm-2">
                                    Deposit Amount
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.RDepositAmount)
                                </dd>
                                <dt class="col-sm-2">
                                    Description
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.RDesc)
                                </dd>
                                <dt class="col-sm-2">
                                    Status
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.RStatus)
                                </dd>
                                <dt class="col-sm-2">
                                    Location
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.RLocation.LAddress)
                                </dd>
                            </dl>

                            <form asp-action="Delete" onsubmit="return confirmDelete();">
                                <input type="hidden" asp-for="RId" />
                                <input type="submit" value="Delete" class="btn btn-danger col-sm-12" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
@section Script{
    <script>
        function confirmDelete() {
            if (confirm("Deleting this can't be undone, are you sure?")) {
                return true;
            } else {
                return false;
            }
        }
    </script>
}



