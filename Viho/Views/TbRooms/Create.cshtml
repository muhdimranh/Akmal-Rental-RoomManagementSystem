@model Viho.web.DataDB.TbRoom
@{
    ViewData["Title"] = "Add Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Room</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item">Room</li>
                        <li class="breadcrumb-item active">Add Room</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>Adding New Room</h5><span>Fill Room Details</span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="TbRooms">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <h6>Room No.</h6>
                                        <input asp-for="RNo" class="form-control" placeholder="Room Number" />
                                        <span asp-validation-for="RNo" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <h6>Location</h6>
                                        <select asp-for="RLocationid" class="form-control" asp-items="ViewBag.RLocationid" placeholder="Room Location/Floor"></select>
                                        
                                    </div>
                                    <div class="form-group">
                                        <h6>Type</h6>
                                        <input asp-for="RType" class="form-control" placeholder="Room Type (e.g. big, small, etc...)" />
                                        <span asp-validation-for="RType" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <h6>Price Per Month</h6>
                                        <input asp-for="RPrice" class="form-control" placeholder="Room Price Per Month" />
                                        <span asp-validation-for="RPrice" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <h6>Deposit</h6>
                                        <input asp-for="RDepositAmount" class="form-control" placeholder="Room Deposit Amount" />
                                        <span asp-validation-for="RDepositAmount" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <h6>Room Description</h6>
                                        <input asp-for="RDesc" class="form-control" placeholder="Room Description (extra information e.g., standing fan, single bed, etc...)" />
                                        <span asp-validation-for="RDesc" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <h6>Status</h6>
                                        <select asp-for="RStatus" class="form-control">
                                            <option value="Available">Available</option>
                                            <option value="Not Available">Not Available</option>
                                        </select>
                                        <span asp-validation-for="RStatus" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <h6>Room Image</h6>
                                        <label class="custom-file-label" for="customFile"></label>
                                        <input type="file" name="RImg1" class="form-control-file" />
                                        <span asp-validation-for="RImg1" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Add" class="btn btn-primary col-sm-12" onsubmit="return confirmAdd();"/>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@section Script{
    <script>
        function confirmAdd() {
            if (confirm("Are you sure you want to add?")) {
                return true;
            } else {
                return false;
            }
        }
    </script>
}
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

